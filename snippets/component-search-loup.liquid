{% style %}
    .loup-wrapper.bottom.right {
        position: fixed;
        bottom: 2rem;
        right: 2.5rem;
        padding: 1.3rem 1.35rem 1rem 1rem;
        background: rgb(var(--color-foreground));
        z-index: 3;
        border-radius: 50%;
        height: 60px;
        width: 60px;
        border: 2px solid rgb(var(--color-background));
        cursor: pointer;
    }

    .loup-wrapper svg {
        color: rgb(var(--color-background));
        stroke: rgb(var(--color-background));
    }
{% endstyle %}


<fixed-loup>
    <button class="loup-wrapper bottom right">
        <svg class="loup" aria-hidden="true" focusable="false" role="presentation" width="26" height="26">
            <use href="#icon-search">
        </svg>
    </button>
</fixed-loup>
