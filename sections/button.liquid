{%- style -%}
    #shopify-section-{{ section.id }} {
        text-align: center;
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    #shopify-section-{{ section.id }} button {
        
    }
{%- endstyle -%}
  
{% if section.settings.button_text != blank %}
    {% if section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="button button--primary">
            {{ section.settings.button_text }}
        </a>
    {% else %}
        <button class="button button--primary">
            {{ section.settings.button_text }}
        </button>
    {% endif %}
{% endif %}


{% schema %}
{
  "name": "t:sections.button.name",
  "class": "section",
  "settings": [
    {
        "type": "text",
        "id": "button_text",
        "label": "t:sections.button.settings.button_text.label",
        "default": "Show all collections"
    },
    {
        "type": "url",
        "id": "button_link",
        "label": "t:sections.button.settings.button_link.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.button.name"
    }
  ]
 }
{% endschema %}
